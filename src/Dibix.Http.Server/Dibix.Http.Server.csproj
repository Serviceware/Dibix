<Project Sdk="Microsoft.NET.Sdk">
  
  <PropertyGroup>
    <TargetFrameworks>net6.0;netstandard2.0;net461</TargetFrameworks>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="..\..\shared\Guard.cs" Link="Diagnostics\Guard.cs" />
    <Compile Include="..\..\shared\Extensions\EnumerableExtensions.cs" Link="Extensions\EnumerableExtensions.cs" />
    <Compile Include="..\..\shared\Extensions\ReflectionExtensions.cs" Link="Extensions\ReflectionExtensions.cs" />
    <Compile Include="..\..\shared\ParameterSources\*.cs" Link="Providers\Sources\%(Filename).cs" />
    <Compile Include="..\..\shared\KnownHeaders.cs" Link="Runtime\KnownHeaders.cs" />
    <Compile Include="..\..\shared\Http\HttpErrorResponseParser.cs" Link="Runtime\HttpErrorResponseParser.cs" />
    <Compile Include="..\..\shared\Http\HttpParameterUtility.cs" Link="Runtime\HttpParameterUtility.cs" />
    <Compile Include="..\..\shared\Http\HttpParameterName.cs" Link="Runtime\HttpParameterName.cs" />
    <Compile Include="..\..\shared\Http\RouteBuilder.cs" Link="Utilities\RouteBuilder.cs" />
    <Compile Include="..\..\shared\Utilities\ExpressionUtility.cs" Link="Utilities\ExpressionUtility.cs" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' != 'net461'">
    <Compile Remove="Runtime\HttpObjectResponse.cs" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Dibix\Dibix.csproj" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
    <PackageReference Include="System.Reflection.Emit" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net461'">
    <PackageReference Include="Microsoft.AspNet.WebApi.Core" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' != 'net461'">
    <PackageReference Include="System.IO.Packaging" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net461'">
    <Reference Include="WindowsBase" /> <!-- System.IO.Packaging -->
  </ItemGroup>
  
</Project>