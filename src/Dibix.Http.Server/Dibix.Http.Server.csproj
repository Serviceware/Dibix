<Project Sdk="Microsoft.NET.Sdk">
  
  <PropertyGroup>
    <TargetFrameworks>net5.0;netstandard2.0;net451</TargetFrameworks>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="..\..\shared\Guard.cs" Link="Diagnostics\Guard.cs" />
    <Compile Include="..\..\shared\ReflectionExtensions.cs" Link="Extensions\ReflectionExtensions.cs" />
    <Compile Include="..\..\shared\ParameterSources\*.cs" Link="Providers\Sources\%(Filename).cs" />
    <Compile Include="..\..\shared\ExpressionUtility.cs" Link="Utilities\ExpressionUtility.cs" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' != 'net451'">
    <Compile Remove="Runtime\HttpObjectResponse.cs" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Dibix\Dibix.csproj" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
    <PackageReference Include="System.Reflection.Emit" Version="$(ReflectionEmitVersion)" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net451'">
    <PackageReference Include="Microsoft.AspNet.WebApi.Core" Version="$(AspNetWebApiNetFxVersion)" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' != 'net451'">
    <PackageReference Include="System.IO.Packaging" Version="$(IOPackageVersion)" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net451'">
    <Reference Include="WindowsBase" /> <!-- System.IO.Packaging -->
  </ItemGroup>
  
</Project>