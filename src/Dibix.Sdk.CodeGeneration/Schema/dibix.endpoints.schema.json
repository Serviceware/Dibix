{
  "$schema": "http://json-schema.org/draft-05/schema#",
  "definitions": {
    "PrimitiveTypeReference": {
      "type": "string",
      "pattern": "^(binary|boolean|byte|datetime|datetimeoffset|decimal|double|float|int16|int32|int64|string|uri|uuid|xml)\\??\\*?$"
    },
    "SchemaTypeReference": {
      "type": "string",
      "pattern": "^([A-Z]([\\w]+)(\\.[\\w]+){0,})\\??\\*?$"
    },
    "TypeReference": {
      "anyOf": [
        {
          "$ref": "#/definitions/PrimitiveTypeReference"
        },
        {
          "$ref": "#/definitions/SchemaTypeReference"
        }
      ]
    },
    "NameIdentifier": {
      "type": "string",
      "pattern": "^[A-Z]([A-Za-z.]+)?(,[A-Z]([A-Za-z.]+)?)?$"
    },
    "ParameterLocation": {
      "type": "string",
      "enum": [
        "Query",
        "Header"
      ]
    },
    "DefaultValue": {
      "anyOf": [
        {
          "type": "boolean"
        },
        {
          "type": "number"
        },
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ]
    },
    "MediaType": {
      "type": "string",
      "pattern": "^\\w+\\/[-+.\\w*]+$"
    },
    "Body": {
      "type": "object",
      "properties": {
        "contract": {
          "$ref": "#/definitions/SchemaTypeReference"
        },
        "mediaType": {
          "$ref": "#/definitions/MediaType"
        },
        "binder": {
          "$ref": "#/definitions/NameIdentifier"
        }
      },
      "minProperties": 1,
      "additionalProperties": false
    },
    "ConstantParameterSource": {
      "anyOf": [
        {
          "type": "boolean"
        },
        {
          "type": "number"
        },
        {
          "type": "string",
          "pattern": "^[^.]+$"
        },
        {
          "type": "null"
        }
      ]
    },
    "PropertySourcePath": {
      "type": "string",
      "pattern": "^[A-Z]+(\\.[A-Za-z$]([A-Za-z\\d-]+)?){1,}$"
    },
    "ParameterSourceWithConverter": {
      "type": "object",
      "minProperties": 2,
      "additionalProperties": false,
      "properties": {
        "source": {
          "anyOf": [
            {
              "$ref": "#/definitions/PropertySourcePath"
            }
          ]
        },
        "converter": {
          "type": "string",
          "pattern": "^[A-Z]+$"
        }
      },
      "required": [
        "source",
        "converter"
      ]
    },
    "ItemsParameterSource": {
      "type": "object",
      "minProperties": 2,
      "additionalProperties": false,
      "properties": {
        "source": {
          "$ref": "#/definitions/PropertySourcePath"
        },
        "items": {
          "type": "object",
          "patternProperties": {
            "^[a-z]+$": {
              "anyOf": [
                {
                  "$ref": "#/definitions/ConstantParameterSource"
                },
                {
                  "$ref": "#/definitions/PropertySourcePath"
                },
                {
                  "$ref": "#/definitions/ParameterSourceWithConverter"
                }
              ]
            }
          }
        }
      },
      "required": [
        "source",
        "items"
      ]
    },
    "BodyConverterParameterSource": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": false,
      "properties": {
        "convertFromBody": {
          "$ref": "#/definitions/NameIdentifier"
        }
      }
    },
    "RootParameterSource": {
      "anyOf": [
        {
          "$ref": "#/definitions/ConstantParameterSource"
        },
        {
          "$ref": "#/definitions/PropertySourcePath"
        },
        {
          "$ref": "#/definitions/ParameterSourceWithConverter"
        },
        {
          "$ref": "#/definitions/ItemsParameterSource"
        },
        {
          "$ref": "#/definitions/BodyConverterParameterSource"
        }
      ]
    },
    "ActionTargetParameterDescription": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": false,
      "properties": {
        "type": {
          "$ref": "#/definitions/TypeReference"
        },
        "location": {
          "$ref": "#/definitions/ParameterLocation"
        },
        "default": {
          "$ref": "#/definitions/DefaultValue"
        }
      },
      "required": [
        "type"
      ]
    },
    "ActionTargetParameterDescriptionWithSource": {
      "type": "object",
      "minProperties": 2,
      "additionalProperties": false,
      "properties": {
        "type": {
          "$ref": "#/definitions/TypeReference"
        },
        "source": {
          "$ref": "#/definitions/RootParameterSource"
        },
        "converter": {
          "type": "string",
          "pattern": "^[A-Z]+$"
        },
        "default": {
          "$ref": "#/definitions/DefaultValue"
        }
      },
      "required": [
        "source"
      ]
    },
    "ActionTargetParameter": {
      "anyOf": [
        {
          "$ref": "#/definitions/RootParameterSource"
        },
        {
          "$ref": "#/definitions/ActionTargetParameterDescription"
        },
        {
          "$ref": "#/definitions/ActionTargetParameterDescriptionWithSource"
        }
      ]
    },
    "ActionTargetParameters": {
      "type": "object",
      "patternProperties": {
        "^[a-z]([A-Za-z]+)?$": {
          "$ref": "#/definitions/ActionTargetParameter"
        }
      },
      "minProperties": 1,
      "additionalProperties": false
    },
    "SecuritySchemes": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "type": "string"
          }
        }
      ]
    },
    "AuthorizationParameterMappings": {
      "type": "object",
      "patternProperties": {
        "^[a-z]+$": {
          "$ref": "#/definitions/AuthorizationParameterMapping"
        }
      },
      "minProperties": 1,
      "additionalProperties": false
    },
    "AuthorizationParameterMapping": {
      "anyOf": [
        {
          "$ref": "#/definitions/RootParameterSource"
        }
      ]
    },
    "AuthorizationTarget": {
      "anyOf": [
        {
          "const": "none"
        },
        {
          "type": "object",
          "properties": {
            "target": {
              "$ref": "#/definitions/NameIdentifier"
            },
            "params": {
              "$ref": "#/definitions/AuthorizationParameterMappings"
            }
          },
          "required": [
            "target"
          ],
          "additionalProperties": false
        }
      ]
    },
    "AuthorizationTemplateName": {
      "type": "string",
      "pattern": "^[A-Z]([A-Za-z]+)?$"
    },
    "AuthorizationTemplateReference": {
      "anyOf": [
        {
          "properties": {
            "name": {
              "$ref": "#/definitions/AuthorizationTemplateName"
            }
          },
          "patternProperties": {
            "^(?!name$)[a-z]+$": {
              "$ref": "#/definitions/AuthorizationParameterMapping"
            }
          },
          "required": [
            "name"
          ],
          "additionalProperties": false
        },
        {
          "$ref": "#/definitions/AuthorizationTemplateName"
        }
      ]
    },
    "FileResponse": {
      "properties": {
        "mediaType": {
          "$ref": "#/definitions/MediaType"
        },
        "cache": {
          "type": "boolean"
        }
      },
      "required": [
        "mediaType"
      ],
      "additionalProperties": false
    },
    "ErrorResponse": {
      "type": "object",
      "properties": {
        "errorCode": {
          "type": "number"
        },
        "errorMessage": {
          "type": "string"
        }
      },
      "minProperties": 1,
      "additionalProperties": false
    },
    "Response": {
      "type": "object",
      "properties": {
        "type": {
          "$ref": "#/definitions/TypeReference"
        },
        "description": {
          "type": "string"
        },
        "autoDetect": {
          "anyOf": [
            {
              "const": false
            },
            {
              "$ref": "#/definitions/ErrorResponse"
            }
          ]
        }
      },
      "minProperties": 1,
      "additionalProperties": false
    },
    "Responses": {
      "type": "object",
      "patternProperties": {
        "^\\d{3}$": {
          "anyOf": [
            {
              "type": "null"
            },
            {
              "$ref": "#/definitions/TypeReference"
            },
            {
              "$ref": "#/definitions/Response"
            }
          ]
        }
      },
      "minProperties": 1,
      "additionalProperties": false
    },
    "Api": {
      "type": "object",
      "properties": {
        "$schema": {
          "type": "string"
        }
      },
      "patternProperties": {
        "^[A-Za-z]+$": {
          "$ref": "#/definitions/Controller"
        }
      },
      "minProperties": 1,
      "additionalProperties": false
    },
    "Controller": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "$ref": "#/definitions/Action"
      }
    },
    "Action": {
      "type": "object",
      "properties": {
        "childRoute": {
          "type": "string",
          "pattern": "^[A-Za-z_\\-/\\{\\}]+(.[a-z]+)?$",
          "maxLength": 200
        },
        "method": {
          "type": "string",
          "enum": [
            "GET",
            "POST",
            "PUT",
            "PATCH",
            "DELETE"
          ]
        },
        "target": {
          "$ref": "#/definitions/NameIdentifier"
        },
        "operationId": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "body": {
          "anyOf": [
            {
              "$ref": "#/definitions/SchemaTypeReference"
            },
            {
              "$ref": "#/definitions/Body"
            }
          ]
        },
        "params": {
          "$ref": "#/definitions/ActionTargetParameters"
        },
        "securitySchemes": {
          "$ref": "#/definitions/SecuritySchemes"
        },
        "authorization": {
          "anyOf": [
            {
              "$ref": "#/definitions/AuthorizationTarget"
            },
            {
              "$ref": "#/definitions/AuthorizationTemplateReference"
            }
          ]
        },
        "fileResponse": {
          "$ref": "#/definitions/FileResponse"
        },
        "response": {
          "anyOf": [
            {
              "$ref": "#/definitions/Responses"
            },
            {
              "$ref": "#/definitions/Response"
            },
            {
              "$ref": "#/definitions/TypeReference"
            }
          ]
        }
      },
      "required": [
        "method",
        "target"
      ],
      "additionalProperties": false
    }
  },
  "$ref": "#/definitions/Api"
}