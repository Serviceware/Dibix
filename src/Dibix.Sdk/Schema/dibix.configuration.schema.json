{
  "$schema": "http://json-schema.org/draft-05/schema#",
  "definitions": {
    "NameIdentifier": {
      "type": "string",
      "pattern": "^[A-Z]([A-Za-z.]+)?(,[A-Z]([A-Za-z.]+)?)?$"
    },
    "PrimitiveType": {
      "type": "string",
      "pattern": "^(binary|boolean|byte|datetime|datetimeoffset|decimal|double|float|int16|int32|int64|string|uri|uuid|xml)\\??\\*?$"
    },
    "ConstantSource": {
      "anyOf": [
        {
          "type": "boolean"
        },
        {
          "type": "number"
        },
        {
          "type": "string",
          "pattern": "^[^.]+$"
        },
        {
          "type": "null"
        }
      ]
    },
    "PropertySource": {
      "anyOf": [
        {
          "type": "string",
          "pattern": "^[A-Z]+((\\.[A-Za-z-]+)|((\\.[A-Z][A-Za-z]+?){1,})|(\\.\\$[A-Z]+))$"
        },
        {
          "$ref": "#/definitions/ComplexPropertySource"
        }
      ]
    },
    "ComplexPropertySource": {
      "type": "object",
      "minProperties": 2,
      "additionalProperties": false,
      "properties": {
        "source": {
          "$ref": "#/definitions/PropertySource"
        },
        "converter": {
          "type": "string",
          "pattern": "^[A-Z]+$"
        }
      },
      "required": [
        "source",
        "converter"
      ]
    },
    "ItemsPropertySource": {
      "type": "object",
      "minProperties": 2,
      "additionalProperties": false,
      "properties": {
        "source": {
          "$ref": "#/definitions/PropertySource"
        },
        "items": {
          "type": "object",
          "patternProperties": {
            "^[a-z]+$": {
              "anyOf": [
                {
                  "$ref": "#/definitions/Source"
                }
              ]
            }
          }
        }
      },
      "required": [
        "source",
        "items"
      ]
    },
    "BodySource": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": false,
      "properties": {
        "convertFromBody": {
          "$ref": "#/definitions/NameIdentifier"
        }
      }
    },
    "Source": {
      "anyOf": [
        {
          "$ref": "#/definitions/ConstantSource"
        },
        {
          "$ref": "#/definitions/PropertySource"
        }
      ]
    },
    "ParameterMappings": {
      "type": "object",
      "patternProperties": {
        "^[a-z]+$": {
          "anyOf": [
            {
              "$ref": "#/definitions/Source"
            },
            {
              "$ref": "#/definitions/ItemsPropertySource"
            },
            {
              "$ref": "#/definitions/BodySource"
            }
          ]
        }
      },
      "minProperties": 1,
      "additionalProperties": false
    },
    "CustomSecuritySchemeKind": {
      "type": "string",
      "enum": [
        "Bearer",
        "Header"
      ]
    },
    "CustomSecuritySchemeBearer": {
      "type": "object",
      "properties": {
        "type": {
          "const": "Bearer"
        }
      },
      "minProperties": 1,
      "additionalProperties": false,
      "required": [
        "type"
      ]
    },
    "CustomSecuritySchemeHeader": {
      "type": "object",
      "properties": {
        "type": {
          "const": "Header"
        },
        "headerName": {
          "type": "string",
          "minLength": 1
        }
      },
      "minProperties": 2,
      "additionalProperties": false,
      "required": [
        "type",
        "headerName"
      ]
    },
    "CustomSecuritySchemes": {
      "type": "object",
      "patternProperties": {
        "^[A-Z]([A-Za-z_\\d]+)?$": {
          "anyOf": [
            {
              "const": "Bearer"
            },
            {
              "$ref": "#/definitions/CustomSecuritySchemeBearer"
            },
            {
              "$ref": "#/definitions/CustomSecuritySchemeHeader"
            }
          ]
        }
      },
      "minProperties": 1,
      "additionalProperties": false
    },
    "SecuritySchemeReference": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "type": "string"
          }
        }
      ]
    },
    "AuthorizationTarget": {
      "type": "object",
      "properties": {
        "target": {
          "$ref": "#/definitions/NameIdentifier"
        },
        "params": {
          "$ref": "#/definitions/ParameterMappings"
        }
      },
      "required": [
        "target"
      ],
      "additionalProperties": false
    },
    "Configuration": {
      "type": "object",
      "properties": {
        "SqlCodeAnalysis": {
          "$ref": "#/definitions/SqlCodeAnalysisConfiguration"
        },
        "Endpoints": {
          "$ref": "#/definitions/EndpointConfiguration"
        }
      },
      "additionalProperties": false,
      "minProperties": 1
    },
    "SqlCodeAnalysisConfiguration": {
      "type": "object",
      "properties": {
        "NamingConventionPrefix": {
          "anyOf": [
            {
              "type": "string",
              "pattern": "^[A-Za-z_]+$"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": false,
      "minProperties": 1
    },
    "EndpointConfiguration": {
      "type": "object",
      "properties": {
        "BaseUrl": {
          "type": "string",
          "pattern": "^(((http|https)://)|/)([A-Za-z._\\-= #%&?\\d]+/?){1,}$"
        },
        "ParameterSources": {
          "$ref": "#/definitions/HttpParameterSourceConfiguration"
        },
        "Converters": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "type": "string",
            "pattern": "^[A-Z]+$"
          }
        },
        "CustomSecuritySchemes": {
          "$ref": "#/definitions/CustomSecuritySchemes"
        },
        "Templates": {
          "$ref": "#/definitions/Templates"
        }
      },
      "additionalProperties": false,
      "minProperties": 1
    },
    "ClaimParameterSourceExplicitConfiguration": {
      "type": "object",
      "properties": {
        "type": {
          "$ref": "#/definitions/PrimitiveType"
        },
        "claimName": {
          "type": "string",
          "minLength": 1
        }
      },
      "additionalProperties": false,
      "minProperties": 2,
      "required": [
        "type",
        "claimName"
      ]
    },
    "ClaimParameterSourceConfiguration": {
      "type": "object",
      "patternProperties": {
        "^[A-Z$]([A-Za-z\\d-]+)?$": {
          "anyOf": [
            {
              "$ref": "#/definitions/PrimitiveType"
            },
            {
              "$ref": "#/definitions/ClaimParameterSourceExplicitConfiguration"
            }
          ]
        }
      },
      "additionalProperties": false,
      "minProperties": 1
    },
    "HttpParameterSourceConfiguration": {
      "type": "object",
      "patternProperties": {
        "^CLAIM$": {
          "$ref": "#/definitions/ClaimParameterSourceConfiguration"
        },
        "^(?!CLAIM$)[A-Z]+$": {
          "type": "object",
          "patternProperties": {
            "^[A-Z$]([A-Za-z\\d-]+)?$": {
              "$ref": "#/definitions/PrimitiveType"
            }
          },
          "additionalProperties": false,
          "minProperties": 1
        }
      },
      "additionalProperties": false,
      "minProperties": 1
    },
    "AuthorizationTemplateReference": {
      "anyOf": [
        {
          "properties": {
            "name": {
              "$ref": "#/definitions/AuthorizationTemplateName"
            }
          },
          "patternProperties": {
            "^(?!name$)[a-z]+$": {
              "$ref": "#/definitions/AuthorizationParameterMapping"
            }
          },
          "required": [
            "name"
          ],
          "additionalProperties": false
        },
        {
          "$ref": "#/definitions/AuthorizationTemplateName"
        }
      ]
    },
    "ConstantParameterSource": {
      "anyOf": [
        {
          "type": "boolean"
        },
        {
          "type": "number"
        },
        {
          "type": "string",
          "pattern": "^[^.]+$"
        },
        {
          "type": "null"
        }
      ]
    },
    "PropertySourcePath": {
      "type": "string",
      "pattern": "^[A-Z]+(\\.[A-Za-z$]([A-Za-z\\d-]+)?){1,}$"
    },
    "ParameterSourceWithConverter": {
      "type": "object",
      "minProperties": 2,
      "additionalProperties": false,
      "properties": {
        "source": {
          "anyOf": [
            {
              "$ref": "#/definitions/PropertySourcePath"
            }
          ]
        },
        "converter": {
          "type": "string",
          "pattern": "^[A-Z]+$"
        }
      },
      "required": [
        "source",
        "converter"
      ]
    },
    "ItemsParameterSource": {
      "type": "object",
      "minProperties": 2,
      "additionalProperties": false,
      "properties": {
        "source": {
          "$ref": "#/definitions/PropertySourcePath"
        },
        "items": {
          "type": "object",
          "patternProperties": {
            "^[a-z]+$": {
              "anyOf": [
                {
                  "$ref": "#/definitions/ConstantParameterSource"
                },
                {
                  "$ref": "#/definitions/PropertySourcePath"
                },
                {
                  "$ref": "#/definitions/ParameterSourceWithConverter"
                }
              ]
            }
          }
        }
      },
      "required": [
        "source",
        "items"
      ]
    },
    "BodyConverterParameterSource": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": false,
      "properties": {
        "convertFromBody": {
          "$ref": "#/definitions/NameIdentifier"
        }
      }
    },
    "RootParameterSource": {
      "anyOf": [
        {
          "$ref": "#/definitions/ConstantParameterSource"
        },
        {
          "$ref": "#/definitions/PropertySourcePath"
        },
        {
          "$ref": "#/definitions/ParameterSourceWithConverter"
        },
        {
          "$ref": "#/definitions/ItemsParameterSource"
        },
        {
          "$ref": "#/definitions/BodyConverterParameterSource"
        }
      ]
    },
    "AuthorizationTemplateName": {
      "type": "string",
      "pattern": "^[A-Z]([A-Za-z]+)?$"
    },
    "AuthorizationParameterMapping": {
      "anyOf": [
        {
          "$ref": "#/definitions/RootParameterSource"
        }
      ]
    },
    "ActionTemplate": {
      "type": "object",
      "properties": {
        "securitySchemes": {
          "$ref": "#/definitions/SecuritySchemeReference"
        },
        "authorization": {
          "anyOf": [
            {
              "$ref": "#/definitions/AuthorizationTarget"
            },
            {
              "$ref": "#/definitions/AuthorizationTemplateReference"
            }
          ]
        }
      },
      "additionalProperties": false,
      "minProperties": 1
    },
    "Template": {
      "type": "object",
      "properties": {
        "Action": {
          "$ref": "#/definitions/ActionTemplate"
        }
      },
      "additionalProperties": false,
      "minProperties": 1
    },
    "AuthorizationTemplate": {
      "type": "object",
      "patternProperties": {
        "^[A-Z]([A-Za-z]+)?$": {
          "$ref": "#/definitions/AuthorizationTarget"
        }
      },
      "additionalProperties": false,
      "minProperties": 1
    },
    "Templates": {
      "type": "object",
      "properties": {
        "Default": {
          "$ref": "#/definitions/Template"
        },
        "Authorization": {
          "$ref": "#/definitions/AuthorizationTemplate"
        }
      },
      "additionalProperties": false,
      "minProperties": 1
    }
  },
  "$ref": "#/definitions/Configuration"
}