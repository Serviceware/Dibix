{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "Configuration": {
      "type": "object",
      "properties": {
        "SqlCodeAnalysis": {
          "$ref": "#/definitions/SqlCodeAnalysisConfiguration"
        },
        "Endpoints": {
          "$ref": "#/definitions/EndpointConfiguration"
        }
      },
      "additionalProperties": false,
      "minProperties": 1
    },
    "SqlCodeAnalysisConfiguration": {
      "type": "object",
      "properties": {
        "NamingConventionPrefix": {
          "anyOf": [
            {
              "type": "string",
              "pattern": "^[A-Za-z_]+$"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": false,
      "minProperties": 1
    },
    "EndpointConfiguration": {
      "type": "object",
      "properties": {
        "BaseUrl": {
          "type": "string",
          "pattern": "^(http|https)://([A-Za-z._\\-= #%&?\\d]+/?){1,}$"
        },
        "ParameterSources": {
          "$ref": "#/definitions/HttpParameterSourceConfiguration"
        },
        "Converters": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "type": "string",
            "pattern": "^[A-Z]+$"
          }
        },
        "CustomSecuritySchemes": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "minItems": 1,
              "uniqueItems": true,
              "items": {
                "type": "string"
              }
            }
          ]
        },
        "Templates": {
          "$ref": "#/definitions/Templates"
        }
      },
      "additionalProperties": false,
      "minProperties": 1
    },
    "HttpParameterSourceConfiguration": {
      "type": "object",
      "patternProperties": {
        "^[A-Z]+$": {
          "anyOf": [
            {
              "type": "array",
              "minItems": 1,
              "uniqueItems": true,
              "items": {
                "type": "string",
                "pattern": "^([A-Za-z-]+)|\\$SELF$$"
              }
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": false,
      "minProperties": 1
    },
    "SecuritySchemes": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "type": "string"
          }
        }
      ]
    },
    "ActionTemplate": {
      "type": "object",
      "properties": {
        "securitySchemes": {
          "$ref": "#/definitions/SecuritySchemes"
        }
      },
      "additionalProperties": false,
      "minProperties": 1
    },
    "Template": {
      "type": "object",
      "properties": {
        "Action": {
          "$ref": "#/definitions/ActionTemplate"
        }
      },
      "additionalProperties": false,
      "minProperties": 1
    },
    "Templates": {
      "type": "object",
      "properties": {
        "Default": {
          "$ref": "#/definitions/Template"
        }
      },
      "additionalProperties": false,
      "minProperties": 1
    }
  },
  "$ref": "#/definitions/Configuration"
}