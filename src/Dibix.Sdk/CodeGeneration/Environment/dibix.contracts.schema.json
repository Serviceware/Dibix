{
  "$schema": "http://json-schema.org/draft-05/schema#",
  "definitions": {
    "Entity": {
      "type": "object",
      "properties": {
        "$wcfNs": {
          "type": "string"
        } 
      },
      "patternProperties": {
        "^[A-Z]([\\w]+)?$": {
          "type": "string",
          "pattern": "^[A-Za-z]([\\w]+)?\\??(\\[\\]|\\*?)?$"
        }
      },
      "additionalProperties": false
    },
    "Enum": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "string",
            "pattern": "^[A-Z]([\\w]+)?$"
          },
          {
            "type": "object",
            "minProperties": 1,
            "maxProperties": 1,
            "patternProperties": {
              "^[A-Z]([\\w]+)?$": {
                "anyOf": [
                  {
                    "type": "number"
                  },
                  {
                    "type": "string"
                  }
                ]
              }
            },
            "additionalProperties": false
          }
        ]
      }
    }
  },
  "type": "object",
  "patternProperties": {
    "^[A-Z]([\\w]+)?$": {
      "anyOf": [
        {
          "$ref": "#/definitions/Entity"
        },
        {
          "$ref": "#/definitions/Enum"
        }
      ]
    }
  },
  "additionalProperties": false
}