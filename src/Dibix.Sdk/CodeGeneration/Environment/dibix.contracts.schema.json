{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "TypeName": {
      "type": "string",
      "pattern": "^[A-Za-z]([\\w]+)?\\??(\\[\\]|\\*?)?$"
    },
    "SerializationBehavior": {
      "type": "string",
      "enum": [
        "Always",
        "IfNotSet",
        "Never"
      ]
    },
    "Entity": {
      "type": "object",
      "properties": {
        "$wcfNs": {
          "type": "string"
        }
      },
      "patternProperties": {
        "^[A-Z]([\\w]+)?$": {
          "anyOf": [
            {
              "$ref": "#/definitions/TypeName"
            },
            {
              "type": "object",
              "minProperties": 1,
              "properties": {
                "type": {
                  "$ref": "#/definitions/TypeName"
                },
                "isPartOfKey": {
                  "type": "boolean"
                },
                "serialize": {
                  "$ref": "#/definitions/SerializationBehavior"
                }
              },
              "required": [
                "type"
              ],
              "additionalProperties": false
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "Enum": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "string",
            "pattern": "^[A-Z]([\\w]+)?$"
          },
          {
            "type": "object",
            "minProperties": 1,
            "maxProperties": 1,
            "patternProperties": {
              "^[A-Z]([\\w]+)?$": {
                "anyOf": [
                  {
                    "type": "number"
                  },
                  {
                    "type": "string"
                  }
                ]
              }
            },
            "additionalProperties": false
          }
        ]
      }
    }
  },
  "type": "object",
  "patternProperties": {
    "^[A-Z]([\\w]+)?$": {
      "anyOf": [
        {
          "$ref": "#/definitions/Entity"
        },
        {
          "$ref": "#/definitions/Enum"
        }
      ]
    }
  },
  "additionalProperties": false
}