{
  "$schema": "http://json-schema.org/draft-05/schema#",
  "definitions": {
    "PrimitiveTypeReference": {
      "type": "string",
      "pattern": "^(binary|boolean|byte|datetime|datetimeoffset|decimal|double|float|int16|int32|int64|string|uuid|xml)\\??\\*?$"
    },
    "SchemaTypeReference": {
      "type": "string",
      "pattern": "^#([\\w]+)(.([\\w]+))*\\??\\*?$"
    },
    "PropertyType": {
      "anyOf": [
        {
          "$ref": "#/definitions/PrimitiveTypeReference"
        },
        {
          "$ref": "#/definitions/SchemaTypeReference"
        }
      ]
    },
    "SerializationBehavior": {
      "type": "string",
      "enum": [
        "Always",
        "IfNotEmpty",
        "Never"
      ]
    },
    "Entity": {
      "type": "object",
      "properties": {
        "$wcfNs": {
          "type": "string",
          "pattern": "^https?://.+"
        }
      },
      "patternProperties": {
        "^[A-Z]([\\w]+)?$": {
          "anyOf": [
            {
              "$ref": "#/definitions/PropertyType"
            },
            {
              "type": "object",
              "minProperties": 2,
              "properties": {
                "type": {
                  "$ref": "#/definitions/PropertyType"
                },
                "isPartOfKey": {
                  "type": "boolean"
                },
                "isOptional": {
                  "type": "boolean"
                },
                "serialize": {
                  "$ref": "#/definitions/SerializationBehavior"
                },
                "obfuscated": {
                  "type": "boolean"
                }
              },
              "required": [
                "type"
              ],
              "additionalProperties": false
            },
            {
              "type": "object",
              "minProperties": 2,
              "properties": {
                "type": {
                  "$ref": "#/definitions/PropertyType"
                },
                "isDiscriminator": {
                  "type": "boolean"
                }
              },
              "required": [
                "type",
                "isDiscriminator"
              ],
              "additionalProperties": false
            },
            {
              "type": "object",
              "minProperties": 2,
              "properties": {
                "type": {
                  "const": "datetime"
                },
                "kind": {
                  "type": "string",
                  "enum": [
                    "utc"
                  ]
                }
              },
              "required": [
                "type",
                "kind"
              ],
              "additionalProperties": false
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "Enum": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "string",
            "pattern": "^[A-Z]([\\w]+)?$"
          },
          {
            "type": "object",
            "minProperties": 1,
            "maxProperties": 1,
            "patternProperties": {
              "^[A-Z]([\\w]+)?$": {
                "anyOf": [
                  {
                    "type": "number"
                  },
                  {
                    "type": "string"
                  }
                ]
              }
            },
            "additionalProperties": false
          }
        ]
      }
    }
  },
  "type": "object",
  "patternProperties": {
    "^[A-Z]([\\w]+)?$": {
      "anyOf": [
        {
          "$ref": "#/definitions/Entity"
        },
        {
          "$ref": "#/definitions/Enum"
        }
      ]
    }
  },
  "additionalProperties": false
}