{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "NameIdentifier": {
      "type": "string",
      "pattern": "^[A-Z]([A-Za-z.]+)?(,[A-Z]([A-Za-z.]+)?)?$"
    },
    "MediaType": {
      "type": "string",
      "pattern": "^\\w+\\/[-+.\\w*]+$"
    },
    "Body": {
      "type": "object",
      "properties": {
        "contract": {
          "$ref": "#/definitions/NameIdentifier"
        },
        "mediaType": {
          "$ref": "#/definitions/MediaType"
        },
        "binder": {
          "$ref": "#/definitions/NameIdentifier"
        }
      },
      "minProperties": 1,
      "additionalProperties": false
    },
    "ConstantSource": {
      "anyOf": [
        {
          "type": "boolean"
        },
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ]
    },
    "PropertySource": {
      "anyOf": [
        {
          "type": "string",
          "pattern": "^[A-Z]+((\\.[A-Za-z-]+)|((\\.[A-Z][A-Za-z]+?){1,})|(\\.\\$[A-Z]+))$"
        },
        {
          "$ref": "#/definitions/ComplexPropertySource"
        }
      ]
    },
    "ComplexPropertySource": {
      "type": "object",
      "minProperties": 2,
      "additionalProperties": false,
      "properties": {
        "source": {
          "$ref": "#/definitions/PropertySource"
        },
        "converter": {
          "type": "string",
          "pattern": "^[A-Z]+$"
        }
      },
      "required": [
        "source",
        "converter"
      ]
    },
    "ItemsPropertySource": {
      "type": "object",
      "minProperties": 2,
      "additionalProperties": false,
      "properties": {
        "source": {
          "$ref": "#/definitions/PropertySource"
        },
        "items": {
          "type": "object",
          "patternProperties": {
            "^[a-z]+$": {
              "anyOf": [
                {
                  "$ref": "#/definitions/Source"
                }
              ]
            }
          }
        }
      },
      "required": [
        "source",
        "items"
      ]
    },
    "BodySource": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": false,
      "properties": {
        "convertFromBody": {
          "$ref": "#/definitions/NameIdentifier"
        }
      }
    },
    "Source": {
      "anyOf": [
        {
          "$ref": "#/definitions/ConstantSource"
        },
        {
          "$ref": "#/definitions/PropertySource"
        }
      ]
    },
    "Authorization": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string"
          }
        }
      ]
    },
    "FileResponse": {
      "properties": {
        "mediaType": {
          "$ref": "#/definitions/MediaType"
        },
        "cache": {
          "type": "boolean"
        }
      },
      "required": [
        "mediaType"
      ],
      "additionalProperties": false
    },
    "Response": {
      "properties": {
        "type": {
          "$ref": "#/definitions/NameIdentifier"
        },
        "description": {
          "type": "string"
        }
      },
      "minProperties": 1,
      "additionalProperties": false
    },
    "Api": {
      "type": "object",
      "properties": {
        "$schema": {
          "type": "string"
        }
      },
      "patternProperties": {
        "^[A-Za-z]+$": {
          "$ref": "#/definitions/Controller"
        }
      },
      "minProperties": 1,
      "additionalProperties": false
    },
    "Controller": {
      "type": "array",
      "minItems": 1,
      "items": {
        "anyOf": [
          {
            "$ref": "#/definitions/Action"
          },
          {
            "$ref": "#/definitions/ControllerImport"
          }
        ]
      }
    },
    "Action": {
      "type": "object",
      "properties": {
        "childRoute": {
          "type": "string",
          "pattern": "^[A-Za-z/\\{\\}]+(.[a-z]+)?$"
        },
        "method": {
          "type": "string",
          "enum": [
            "GET",
            "POST",
            "PUT",
            "PATCH",
            "DELETE"
          ]
        },
        "target": {
          "$ref": "#/definitions/NameIdentifier"
        },
        "operationId": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "body": {
          "anyOf": [
            {
              "$ref": "#/definitions/NameIdentifier"
            },
            {
              "$ref": "#/definitions/Body"
            }
          ]
        },
        "params": {
          "type": "object",
          "patternProperties": {
            "^[a-z]+$": {
              "anyOf": [
                {
                  "$ref": "#/definitions/Source"
                },
                {
                  "$ref": "#/definitions/ItemsPropertySource"
                },
                {
                  "$ref": "#/definitions/BodySource"
                }
              ]
            }
          },
          "minProperties": 1,
          "additionalProperties": false
        },
        "authorization": {
          "$ref": "#/definitions/Authorization"
        },
        "fileResponse": {
          "$ref": "#/definitions/FileResponse"
        },
        "responses": {
          "type": "object",
          "patternProperties": {
            "^\\d{3}$": {
              "anyOf": [
                {
                  "type": "null"
                },
                {
                  "$ref": "#/definitions/NameIdentifier"
                },
                {
                  "$ref": "#/definitions/Response"
                }
              ]
            }
          },
          "minProperties": 1,
          "additionalProperties": false
        }
      },
      "required": [
        "method",
        "target"
      ],
      "additionalProperties": false
    },
    "ControllerImport": {
      "$ref": "#/definitions/NameIdentifier"
    }
  },
  "$ref": "#/definitions/Api"
}