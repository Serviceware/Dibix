{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "NameIdentifier": {
      "type": "string",
      "pattern": "^[A-Z]([A-Za-z.]+)?(,[A-Z]([A-Za-z.]+)?)?$"
    },
    "ConstantSource": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "boolean"
        }
      ]
    },
    "PropertySource": {
      "type": "string",
      "pattern": "^[A-Z]+((\\.\\$[A-Z]+)|(\\.[A-Z]([A-Za-z]+)?){1,})$"
    },
    "ItemsPropertySource": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "source": {
          "$ref": "#/definitions/PropertySource"
        },
        "items": {
          "type": "object",
          "patternProperties": {
            "^[a-z]+$": {
              "anyOf": [
                {
                  "$ref": "#/definitions/Source"
                }
              ]
            }
          }
        }
      },
      "required": [
        "source",
        "items"
      ]
    },
    "BodySource": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": false,
      "properties": {
        "convertFromBody": {
          "$ref": "#/definitions/NameIdentifier"
        }
      }
    },
    "Source": {
      "anyOf": [
        {
          "$ref": "#/definitions/ConstantSource"
        },
        {
          "$ref": "#/definitions/PropertySource"
        }
      ]
    },
    "Api": {
      "type": "object",
      "properties": {
        "$schema": {
          "type": "string"
        }
      },
      "patternProperties": {
        "^[A-Za-z]+$": {
          "$ref": "#/definitions/Controller"
        }
      },
      "minProperties": 1,
      "additionalProperties": false
    },
    "Controller": {
      "type": "array",
      "minItems": 1,
      "items": {
        "anyOf": [
          {
            "$ref": "#/definitions/Action"
          },
          {
            "$ref": "#/definitions/ControllerImport"
          }
        ]
      }
    },
    "Action": {
      "type": "object",
      "properties": {
        "childRoute": {
          "type": "string",
          "pattern": "^[A-Za-z/\\{\\}]+$"
        },
        "method": {
          "type": "string",
          "enum": [
            "GET",
            "POST",
            "PUT",
            "PATCH",
            "DELETE"
          ]
        },
        "target": {
          "$ref": "#/definitions/NameIdentifier"
        },
        "description": {
          "type": "string"
        },
        "body": {
          "$ref": "#/definitions/NameIdentifier"
        },
        "params": {
          "type": "object",
          "patternProperties": {
            "^[a-z]+$": {
              "anyOf": [
                {
                  "$ref": "#/definitions/Source"
                },
                {
                  "$ref": "#/definitions/ItemsPropertySource"
                },
                {
                  "$ref": "#/definitions/BodySource"
                }
              ]
            }
          },
          "minProperties": 1,
          "additionalProperties": false
        },
        "bindFromBody": {
          "$ref": "#/definitions/NameIdentifier"
        },
        "isAnonymous": {
          "type": "boolean"
        }
      },
      "required": [
        "method",
        "target"
      ],
      "additionalProperties": false
    },
    "ControllerImport": {
      "$ref": "#/definitions/NameIdentifier"
    }
  },
  "$ref": "#/definitions/Api"
}