{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "NameIdentifier": {
      "type": "string",
      "pattern": "^[A-Z]([A-Za-z.]+)?(,[A-Z]([A-Za-z.]+)?)?$"
    },
    "Api": {
      "type": "object",
      "properties": {
        "$schema": {
          "type": "string"
        }
      },
      "patternProperties": {
        "^[A-Za-z]+$": {
          "$ref": "#/definitions/Controller"
        }
      },
      "minProperties": 1,
      "additionalProperties": false
    },
    "Controller": {
      "type": "array",
      "minItems": 1,
      "items": {
        "anyOf": [
          {
            "$ref": "#/definitions/Action"
          },
          {
            "$ref": "#/definitions/ControllerImport"
          }
        ]
      }
    },
    "Action": {
      "type": "object",
      "properties": {
        "childRoute": {
          "type": "string",
          "pattern": "^[A-Za-z/\\{\\}]+$"
        },
        "method": {
          "type": "string",
          "enum": [
            "GET",
            "POST",
            "PUT",
            "PATCH",
            "DELETE"
          ]
        },
        "target": {
          "$ref": "#/definitions/NameIdentifier"
        },
        "description": {
          "type": "string" 
        },
        "body": {
          "$ref": "#/definitions/NameIdentifier"
        },
        "params": {
          "type": "object",
          "patternProperties": {
            "^[a-z]([A-Za-z]+)?$": {
              "anyOf": [
                {
                  "type": "string",
                  "pattern": "^[A-Z]+.[A-Z]([A-Za-z]+)?$"
                },
                {
                  "type": "number"
                },
                {
                  "type": "boolean"
                },
                {
                  "type": "object",
                  "minProperties": 1,
                  "additionalProperties": false,
                  "properties": {
                    "convertFromBody": {
                      "$ref": "#/definitions/NameIdentifier"
                    }
                  }
                }
              ]
            }
          },
          "minProperties": 1,
          "additionalProperties": false
        },
        "bindFromBody": {
          "$ref": "#/definitions/NameIdentifier"
        },
        "omitResult": {
          "type": "boolean"
        },
        "isAnonymous": {
          "type": "boolean"
        }
      },
      "required": [
        "method",
        "target"
      ],
      "additionalProperties": false
    },
    "ControllerImport": {
      "$ref": "#/definitions/NameIdentifier"
    }
  },
  "$ref": "#/definitions/Api"
}