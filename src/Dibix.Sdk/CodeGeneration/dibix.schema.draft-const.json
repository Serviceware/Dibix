{
  "title": "Schema for configuring the Dibix.Sdk SQL DAO accessor code generator",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "directorySource": {
      "type": "object",
      "description": "A directory that contains SQL files",
      "required": [
        "kind",
        "name"
      ],
      "properties": {
        "kind": {
          "type": "string",
          "description": "The kind of source. Can be \"directory\" or \"file\"",
          "const": "directory"
        },
        "name": {
          "type": "string",
          "description": "The path to a directory that contains SQL files"
        }
      },
      "additionalProperties": false
    },
    "fileSource": {
      "type": "object",
      "description": "A specific SQL file",
      "required": [
        "kind",
        "path"
      ],
      "properties": {
        "kind": {
          "type": "string",
          "description": "The kind of source. Can be \"directory\" or \"file\"",
          "const": "file"
        },
        "path": {
          "type": "string",
          "description": "The path to a specific SQL file"
        }
      },
      "additionalProperties": false
    }
  },
  "properties": {
    "$schema": {
      "type": "string"
    },
    "sources": {
      "type": "array",
      "description": "A list of sources to scan",
      "items": {
        "oneOf": [
          {
            "$ref": "#/definitions/directorySource"
          },
          {
            "$ref": "#/definitions/fileSource"
          }
        ]
      },
      "minItems": 1
    }
  },
  "required": [
    "sources"
  ],
  "additionalProperties": false
}