{
  "title": "Schema for configuring the Dibix.Sdk SQL DAO accessor code generator",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "source": {
      "type": "object",
      "required": [
        "kind"
      ],
      "properties": {
        "kind": {
          "type": "string",
          "enum": [
            "directory",
            "file"
          ]
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "kind": {
                "const": "directory"
              }
            }
          },
          "then": {
            "required": [
              "name"
            ],
            "properties": {
              "name": {
                "type": "string",
                "description": "The path to a directory that contains SQL files"
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "kind": {
                "const": "file"
              }
            }
          },
          "then": {
            "required": [
              "path"
            ],
            "properties": {
              "path": {
                "type": "string",
                "description": "The path to a specific SQL file"
              }
            }
          }
        }
      ]
    }
  },
  "properties": {
    "$schema": {
      "type": "string"
    },
    "sources": {
      "type": "array",
      "description": "A list of sources to scan",
      "items": [
        {
          "$ref": "#/definitions/source"
        }
      ],
      "minItems": 1
    }
  },
  "required": [
    "sources"
  ],
  "additionalProperties": false
}