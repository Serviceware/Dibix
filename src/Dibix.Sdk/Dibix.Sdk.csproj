<Project Sdk="Microsoft.NET.Sdk">
  
  <Import Project="..\..\build\common.props" />

  <PropertyGroup>
    <TargetFramework>net46</TargetFramework>
    <LangVersion>latest</LangVersion>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="CodeGeneration\Schema\dibix.contracts.schema.json" />
    <EmbeddedResource Include="CodeGeneration\Schema\dibix.endpoints.schema.json" />
    <Compile Include="..\Dibix\Collections\FuncEqualityComparer.cs" Link="Collections\FuncEqualityComparer.cs" />
    <Compile Include="..\Dibix\Diagnostics\Guard.cs" Link="Diagnostics\Guard.cs" />
    <Compile Include="..\Dibix\Extensions\EnumerableExtensions.cs" Link="Extensions\EnumerableExtensions.cs" />
    <Compile Include="..\Dibix\Reflection\TypeExtensions.cs" Link="Extensions\TypeExtensions.Base.cs" />
    <Compile Include="..\Dibix\Http\RouteBuilder.cs" Link="OpenApi\RouteBuilder.cs" />
    <Compile Include="..\Dibix\Http\HttpParameterName.cs" Link="OpenApi\HttpParameterName.cs" />
    <Content Include="CodeGeneration\Schema\dibix.contracts.schema.json">
      <PackagePath>content/dibix.contracts.schema.json</PackagePath>
    </Content>
    <Content Include="CodeGeneration\Schema\dibix.endpoints.schema.json">
      <PackagePath>content/dibix.endpoints.schema.json</PackagePath>
    </Content>
    <Content Include="..\..\build\Sdk.Targets">
      <PackagePath>build</PackagePath>
    </Content>
    <Content Include="..\Dibix\bin\$(Configuration)\net451\Dibix.dll">
      <PackagePath>tools/net46</PackagePath>
    </Content>
    <Content Include="..\Dibix.MSBuild\bin\$(Configuration)\$(TargetFramework)\Dibix.MSBuild.dll">
      <PackagePath>tools/net46</PackagePath>
    </Content>
    <Content Include="$(OutDir)Microsoft.OpenApi.dll">
      <PackagePath>tools/net46</PackagePath>
    </Content>
    <Content Include="$(OutDir)Newtonsoft.Json.dll">
      <PackagePath>tools/net46</PackagePath>
    </Content>
    <Content Include="$(OutDir)Newtonsoft.Json.Schema.dll">
      <PackagePath>tools/net46</PackagePath>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json.Schema" Version="$(NewtonsoftJsonSchemaVersion)" />
    <PackageReference Include="Microsoft.SqlServer.DacFx.x64" Version="$(DacFxVersion)" />
    <PackageReference Include="Microsoft.OpenApi" Version="$(OpenApiVersion)" />
    <PackageReference Include="EnvDTE" Version="$(EnvDTEVersion)" />
    <PackageReference Include="VSLangProj" Version="$(VSLangProjVersion)" />
    <PackageReference Include="Microsoft.VisualStudio.Shell.15.0" Version="$(VisualStudioShellVersion)" />
    <PackageReference Include="Microsoft.VisualStudio.TextTemplating.Interfaces.10.0" Version="$(VSTextTemplatingInterfacesVersion)" />
    <PackageReference Include="Microsoft.Build.Utilities.Core" Version="$(MSBuildUtilitiesVersion)" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="System.ComponentModel.Composition" />
    <Reference Include="System.ComponentModel.DataAnnotations" />
  </ItemGroup>
  
</Project>