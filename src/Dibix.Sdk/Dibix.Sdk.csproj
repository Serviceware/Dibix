<Project Sdk="Microsoft.NET.Sdk">
  
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>
  
  <ItemGroup>
    <EmbeddedResource Include="Environment\lockfile" />
    <EmbeddedResource Include="Schema\dibix.configuration.schema.json" />
    <EmbeddedResource Include="Schema\dibix.contracts.schema.json" />
    <EmbeddedResource Include="Schema\dibix.endpoints.schema.json" />
    <Compile Include="..\..\shared\ParameterSources\*.cs" Link="CodeGeneration\Model\%(Filename).cs" />
    <Compile Include="..\..\shared\Http\HttpParameterUtility.cs" Link="CodeGeneration\Model\HttpParameterUtility.cs" />
    <Compile Include="..\..\shared\Http\HttpErrorResponseParser.cs" Link="CodeGeneration\Parser\HttpErrorResponseParser.cs" />
    <Compile Include="..\..\shared\Guard.cs" Link="Diagnostics\Guard.cs" />
    <Compile Include="..\..\shared\SchemaName.cs" Link="Environment\SchemaName.cs" />
    <Compile Include="..\..\shared\Extensions\CollectionExtensions.cs" Link="Extensions\CollectionExtensions.cs" />
    <Compile Include="..\..\shared\Extensions\EnumerableExtensions.cs" Link="Extensions\EnumerableExtensions.cs" />
    <Compile Include="..\..\shared\Extensions\ReflectionExtensions.cs" Link="Extensions\ReflectionExtensions.cs" />
    <Compile Include="..\..\shared\Http\HttpParameterName.cs" Link="OpenApi\HttpParameterName.cs" />
    <Compile Include="..\..\shared\KnownHeaders.cs" Link="OpenApi\KnownHeaders.cs" />
    <Compile Include="..\..\shared\Http\RouteBuilder.cs" Link="OpenApi\RouteBuilder.cs" />
    <Compile Include="..\..\shared\Utilities\ExpressionUtility.cs" Link="Utilities\ExpressionUtility.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Build.Utilities.Core" />
    <PackageReference Include="Microsoft.OpenApi" />
    <PackageReference Include="Microsoft.SqlServer.DacFx" />
    <PackageReference Include="Newtonsoft.Json" />
    <PackageReference Include="Newtonsoft.Json.Schema" />
    <PackageReference Include="System.IO.Packaging" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="Microsoft.Data.Tools.Components" HintPath="lib\Microsoft.Data.Tools.Components.dll" />
    <Reference Include="Microsoft.Data.Tools.Contracts" HintPath="lib\Microsoft.Data.Tools.Contracts.dll" />
    <Reference Include="Microsoft.Data.Tools.Schema.Tasks.Sql" HintPath="lib\Microsoft.Data.Tools.Schema.Tasks.Sql.dll" />
    <Reference Include="Microsoft.Data.Tools.Schema.Utilities.Sql" HintPath="lib\Microsoft.Data.Tools.Schema.Utilities.Sql.dll" />
    <Reference Include="Microsoft.SqlServer.ConnectionInfo" HintPath="lib\Microsoft.SqlServer.ConnectionInfo.dll" />
  </ItemGroup>

</Project>