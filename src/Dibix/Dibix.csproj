<Project Sdk="Microsoft.NET.Sdk">
  
  <Import Project="..\..\build\common.props" />

  <PropertyGroup>
    <TargetFrameworks>netstandard1.5;net451</TargetFrameworks>
  </PropertyGroup>

  <ItemGroup>
    <Compile Update="Access\DatabaseAccessorExtensions.Execute.cs">
      <DependentUpon>Access\DatabaseAccessorExtensions.cs</DependentUpon>
    </Compile>
    <Compile Update="Access\DatabaseAccessorExtensions.GridReader.cs">
      <DependentUpon>Access\DatabaseAccessorExtensions.cs</DependentUpon>
    </Compile>
    <Compile Update="Access\DatabaseAccessorExtensions.QueryMany.cs">
      <DependentUpon>Access\DatabaseAccessorExtensions.cs</DependentUpon>
    </Compile>
    <Compile Update="Access\DatabaseAccessorExtensions.QueryMultiple.cs">
      <DependentUpon>Access\DatabaseAccessorExtensions.cs</DependentUpon>
    </Compile>
    <Compile Update="Access\DatabaseAccessorExtensions.QuerySingle.cs">
      <DependentUpon>Access\DatabaseAccessorExtensions.cs</DependentUpon>
    </Compile>
    <Compile Update="Access\DatabaseAccessorExtensions.QuerySingleOrDefault.cs">
      <DependentUpon>Access\DatabaseAccessorExtensions.cs</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard1.5'">
    <Compile Remove="Http\DatabaseAccessorExtensions.Http.cs" />
    <Compile Remove="Http\Http*Response.cs" />
    <Compile Remove="Http\HttpActionInvoker.cs" />

    <PackageReference Include="System.ComponentModel.Annotations" Version="$(DataAnnotationsVersion)" />
    <PackageReference Include="System.Data.SqlClient" Version="$(SqlClientVersion)" />
    <PackageReference Include="System.Diagnostics.Process" Version="$(DiagnosticsProcessVersion)" />
    <PackageReference Include="System.Reflection" Version="$(ReflectionVersion)" />
  </ItemGroup>
  
  <ItemGroup Condition="'$(TargetFramework)' == 'net451'">
    <Reference Include="System.ComponentModel.DataAnnotations" Version="4.0" />
    <PackageReference Include="Microsoft.AspNet.WebApi.Client" Version="$(AspNetWebApiVersion)" />
    <PackageReference Include="Microsoft.AspNet.WebApi.Core" Version="$(AspNetWebApiVersion)" />
  </ItemGroup>
  
</Project>
